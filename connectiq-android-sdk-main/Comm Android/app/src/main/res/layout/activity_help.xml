<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- What is ClearShot Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/what_is_clearshot_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/what_is_clearshot_content"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <!-- Requirements Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/requirements_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/requirements_content"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/requirements_note"
            android:textStyle="italic"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <!-- Watch Controls Section -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/watch_controls_image_description"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/fr255_guide2"
            android:layout_margin="12dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/watch_controls_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <!-- Button Layout Subsection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_layout_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_layout_description"
            android:textSize="16sp"
            android:layout_marginBottom="4dp"/>

        <!-- Button descriptions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_1_description"
                android:textSize="16sp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_4_description"
                android:textSize="16sp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_5_description"
                android:textSize="16sp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_2_description"
                android:textSize="16sp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_3_description"
                android:textSize="16sp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_2_hold_description"
                android:textSize="16sp"
                android:layout_marginBottom="2dp"/>
        </LinearLayout>

        <!-- Additional Resources Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/additional_resources_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/link_github"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/github_repository_link"
            android:textColor="@android:color/holo_blue_dark"
            android:padding="4dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/link_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/personal_website_link"
            android:textColor="@android:color/holo_blue_dark"
            android:padding="4dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/support_note"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"/>
    </LinearLayout>
</ScrollView>